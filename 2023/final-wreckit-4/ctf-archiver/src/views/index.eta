<!DOCTYPE html>
<script src="https://cdn.tailwindcss.com"></script>
<html>
  <div class="grid h-screen place-items-center bg-indigo-500">
    <div class="flex ">
      <h1 class="block tracking-wide text-white text-4xl font-bold px-2">CTFd </h1>
      <a class="items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-indigo-700 rounded-lg focus:ring-4 focus:ring-indigo-200 dark:focus:ring-indigo-900 hover:bg-indigo-800" href="/archive">Archiver</a>
    </div>
    <div class="w-full h-full container mx-auto px-4">
      <div class="flex flex-wrap -mx-1 lg:-mx-4">
        <% it.ctfs.forEach(function(ctf){ %>
        <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/4">
          <article class="overflow-hidden rounded-lg shadow-lg bg-gray-200">
              <header class="flex items-center justify-between leading-tight p-2 md:p-4">
                  <h1 class="text-lg"><a class="text-black"><%= ctf.name %></a></h1>
              </header>
              <footer class="leading-none p-2 md:p-4">
                <a class="w-fill inline-flex items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-indigo-700 rounded-lg focus:ring-4 focus:ring-indigo-200 dark:focus:ring-indigo-900 hover:bg-indigo-800" href="/download?id=<%= ctf.id %>">Download</a>
              </footer>
          </article>
        </div>
        <% }) %>
    </div>
  </div>
</html>